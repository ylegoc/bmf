<!DOCTYPE html>
<html>

<head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <style>
        html,
        body {
            height: 100%;
            padding: 0;
            margin: 0;
        }

        #form {
            width: 20%;
            border: 3px;
            position: absolute;
            right: 5px;
            top: 15%;
            bottom: 5px;
            left: 0%;
            margin-left: 25px;
        }

        .onError {
            color: #ff0000;
        }

    </style>
</head>

<body>
    <script>
        function validateEmail(mail) {
            if (/^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/.test(mail)) {
                return (true)
            }
            return false;
        }

        function validateForm() {
            let mail = document.forms["connectForm"]["mail"].value;
            if (mail == "" || !validateEmail(mail)) {
                let label = document.getElementById("mailLabel");
                label.className += " onError";
                return false;
            }
        } 
    </script>

    <div id="form" class="mx-auto text-center">
        <form name="connectForm" action="/edit_mentor" onsubmit="return validateForm()" method="post">

            <h4 id="mailLabel">Adresse mail</h4>
            <input type="text" class="form-control w-100" name="mail" value="" placeholder="Entrer votre email" />
            <br />
            <br />
            <button type="submit" class="btn btn-lg btn-block btn-outline-primary align-self-end w-100">Se connecter</button>
        </form>
        <br />
        <br />
        <form action="/" method="get">
            <button type="submit" class="btn btn-lg btn-block btn-outline-primary align-self-end w-100">Retour Ã  l'accueil</button>
        </form>
    </div>

</body>

</html>